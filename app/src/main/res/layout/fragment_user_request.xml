<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <!-- Profile Image -->

        <!-- User Name -->

        <LinearLayout
            android:id="@+id/infoLayoutThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewDesion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="210dp"
                android:src="@drawable/baseline_phone_24" />


            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="94dp"
                android:text="TextView"
                android:textColor="#19354E"
                android:textSize="20sp"
                android:textStyle="bold" />


        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewUserIcon"
            android:layout_width="98dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="288dp"
            android:src="@drawable/baseline_account_circle_24"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoLayoutThree"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="100dp"
            android:text="@string/hello_blank_fragment"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewUserName"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewBreakDownIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/breakdownicon" />

            <TextView
                android:id="@+id/textViewBreakDownType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Breakdown Type"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageViewPhoneIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/baseline_phone_24" />

            <TextView
                android:id="@+id/textViewPhoneNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Phone Number"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoLayoutTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoLayout"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewCreatedDate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_date_range_24" />

            <TextView
                android:id="@+id/textViewCreatedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginStart="8dp"
                android:textColor="@color/cardview_dark_background"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/infoLayoutFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoLayoutTwo"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewLocationIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_location_on_24" />


            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Location"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="16sp" />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/infoLayoutSeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoLayoutFour"
            android:layout_marginTop="13dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <Button
                android:id="@+id/trackRoute"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:backgroundTint="#1E407A"
                android:text="Track Route"
                android:textColor="@color/white" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewBreakDown"
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textViewDescription"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="84dp"
            app:srcCompat="@drawable/breakdownpicture" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoLayoutSeven"
            android:layout_marginTop="23dp"
            android:layout_marginStart="8dp"
            android:text="TextView" />

    </RelativeLayout>
</ScrollView>
